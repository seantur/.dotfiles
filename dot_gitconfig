[core]
    editor = nvim
	excludesfile = ~/.gitignore

[color]
    ui = auto

[pull]
    default = current
    ff = only

[push]
    default = current
    followTags = true

[alias]
    ls = log --oneline
    clean-local = "!f() { git remote prune origin && git branch -vv | grep 'origin/.*: gone' | awk '{print $1}' | xargs git branch -D; };f"
    st = status
    oops = reset HEAD~

[include]
    path = ~/.git.identity

[init]
	defaultBranch = main

[log]
    abbrevCommit = true

