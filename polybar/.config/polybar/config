[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
invisible = #0000
transparent = #99000000
warning = #FF0000
spotify = #1DB954
white = #FFFFFF
black = #000000
underline = ${xrdb:color4:#222}

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 1
screenchange-reload = true

[bar/mybar]
monitor = ${env:MONITOR:}
monitor-strict = false
bottom = false
fixed-center = true
radius = 0.0
line-size = 1
line-color = #f00
padding = 2
separator = "  "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 4

modules-left = i3 memory temperature cpu filesystem
modules-center = kernel package-update
modules-right = backup spotify volume battery date

font-0 = Noto Sans Mono:style=Regular
font-1 = FontAwesome5Free:size=12
font-2 = InConsolata-Regular:sie=Regular
font-3 = font\-logos:style=logos
font-4 = Symbola:style=Regular

[bar/tiny]
monitor-strict = false
bottom = false
fixed-center = true
radius = 0.0
line-size = 1
line-color = #f00
padding = 2
separator = "  "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 4

modules-left = i3 memory cpu
modules-center = kernel
modules-right = backup battery date

font-0 = Noto-Sans-Mono-Medium:size=12;0
font-1 = FontAwesome5Free:size=12;0
font-2 = InConsolata-Regular:sie=12;2
font-3 = font\-logos:style=logos
font-4 = Symbola:style=Regular


# Modules

[module/i3]
type = internal/i3

label-mode = %mode%

label-focused = %index%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.underline}

label-unfocused = %index%
label-unfocused-foreground = ${colors.white}

label-visible = %index%

label-urgent = %index%
label-urgent-foreground = ${colors.warning}

label-separator = |

[module/wired-network]
type = internal/network
interface = wlp2s0
interval = 3.0
label-connected = IP %local_ip%

[module/network-speeds]
type = custom/script
exec = ~/.config/polybar/getspeed.sh
interval = 300

[module/date]
type = internal/date
interval = 1.0
date = %m-%d-%Y
time = %H:%M:%S
label = %date%  %time%
format-foreground = ${colors.white}

[module/volume]
type = custom/script
exec = ~/.config/polybar/getvolume.sh
click-left = pavucontrol
click-right = amixer set Master toggle
scroll-up = pactl set-sink-volume 0 +5%
scroll-down = pactl set-sink-volume 0 -5%
interval=1

[module/memory]
type = internal/memory
interval = 3
label = RAM %gb_used%

[module/cpu]
type = internal/cpu
format = <label>
label = CPU %percentage%%

[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 70
format = <label>
format-warn = <label-warn>
label = TEMP %temperature-c%
label-warn = TEMP %temperature-c%
label-warn-foreground = ${colors.warning}

[module/spotify]
type = custom/script
interval = 4
format = <label>
exec = ~/.config/polybar/getspotifyinfo.sh
format-underline = ${colors.spotify}
click-left = playerctl play-pause
scroll-up = playerctl next
scroll-down = playerctl previous

[module/package-update]
type = custom/script
exec = ~/.config/polybar/getupdates.sh
interval = 60
label = PKG %output%

[module/kernel]
type = custom/script
exec = uname -r
label = %{T4} %{T-}%output%
interval = 3600

[module/backup]
type = custom/script
exec = ~/.config/polybar/getbackuptime.sh
interval = 30

[module/battery]
type = internal/battery

full-at = 99

label-full = ⚡
label-charging = ⚡ [%percentage%%++]
label-discharging = ⚡ [%percentage%%--]

battery = BAT0
adapter = AC

[module/filesystem]
type = internal/fs

mount-0 = /

interval = 10
fixed-values = true
label-mounted = [%mountpoint% %percentage_free%% of %total%]
